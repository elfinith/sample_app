<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "хуитор", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav pull-right">
        <li>
         <%= link_to root_path do %>
           <span class="glyphicon glyphicon-home"></span> Главная
         <% end %>
        </li>
	<% if signed_in? %>
          <li>
            <%= link_to users_path do %>
              <span class="glyphicon glyphicon-asterisk"></span> Пользователи
            <% end %>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="glyphicon glyphicon-user"></span> Мои данные <b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li>
                <%= link_to current_user do %>
                 <span class="glyphicon glyphicon-user"></span> Профиль
                <% end %>
              </li>
              <li>
                <%= link_to edit_user_path(current_user) do %>
                  <span class="glyphicon glyphicon-cog"></span> Настройки
                <% end %>
              </li>
              <li class="devider"></li>
              <li>
                <%= link_to signout_path, method: "delete" do %>
                  <span class="glyphicon glyphicon-log-out"></span> Выход
                <% end %>
              </li>
            </ul>
          </li>
        <% else %>
          <li>
            <%= link_to signin_path do %>
              <span class="glyphicon glyphicon-log-in"></span> Вход
            <% end %>
          </li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
