<% provide(:title, "Вход") %>
<h1>Вход</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: sessions_path) do |f| %>
      <%= f.label :email %>
      <%= f.text_field :email %>
      <%= f.label :password %>
      <%= f.password_field :password %>
      <%= f.submit "Войти", class: "btn btn-primary" %>
    <% end %>

    <p>Новый пользователь? <%= link_to "Зарегистрироваться!", signup_path %></p>
  </div>
</div>
