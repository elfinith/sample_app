<li>
  <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content"><%= auto_link(micropost.content) %></span>
  <span class="timestamp">
    Размещено <%= time_ago_in_words(micropost.created_at) %> тому назад.
    <% if current_user?(micropost.user) %>
      <%= link_to "[удалить]", micropost, method: :delete, data: { confirm: "Вы уверены?" }, title: micropost.content %>
    <% end %>
  </span>
</li>
