<% provide(:title, "Изменение данных пользователя") %>
<h1>Изменить данные профиля</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :name, "Имя пользователя" %>
      <%= f.text_field :name, class: 'form-control' %>
      <%= f.label :email %>
      <%= f.text_field :email, class: 'form-control' %>
      <%= f.label :password, "Пароль" %>
      <%= f.password_field :password, class: 'form-control' %>
      <%= f.label :password_confirmation, "Подтверждение пароля" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>
      <%= f.submit "Сохранить изменения", class: "btn btn-primary" %>
    <% end %>

    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <a href="http://gravatar.com/emails"><span class="glyphicon glyphicon-picture"></span> Изменить изображение...</a>
    </div>
  </div>
</div>
